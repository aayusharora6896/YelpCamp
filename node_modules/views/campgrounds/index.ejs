<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">	
			<h1>
				Welcome to Yelp Camp!!
			</h1>
			<p>
				"View our handpicked Campgrounds from all around the world"
			</p>
			<p>
				<a class="btn btn-primary" href="/campgrounds/new"> Add new Campground</a>	
			</p>
		</div>
	</header>
	
	<div class="row">
		<div class="col-lg-12">
			<h3>
				Our Most Popular Campgrounds
			</h3>
		</div>
	</div>
	
	<div class="row">
	<% campgrounds.forEach(function(campground){ %>			
		<div class="col-md-3 col-sm-6 mr-4 mt-4">
			<div id="indexCard" class="card">
        		<img class="card-img-top" src="<%= campground.image%>"> 
				<div class="card-body">
					<h4 class="card-title text-center">
						<%= campground.name%>
					</h4>
				</div>
				<p class= "text-center"> 
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"> More Info! </a>
				</p>					   
			</div>
		</div>																				
	<% }); %>
	</div>
</div>
<%- include("../partials/footer") %>